{
  "name": "node-clean-architecture-typescript-boilerplate",
  "version": "0.0.0",
  "description": "A Node.js webserver template implementing Clean Architecture concepts using Typescript",
  "type": "module",
  "engines": {
    "node": ">= 20.9 < 21"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/jest": "~29.5",
    "@types/node": "~20",
    "@typescript-eslint/eslint-plugin": "~6.15",
    "@typescript-eslint/parser": "~6.15",
    "eslint": "~8.56",
    "eslint-config-prettier": "~9.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-boundaries": "^4.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "~27.6",
    "eslint-plugin-jest-extended": "^2.0.0",
    "jest": "~29.7",
    "jest-extended": "^4.0.2",
    "prettier": "~3.1",
    "rimraf": "~5.0",
    "ts-api-utils": "~1.0",
    "ts-jest": "~29.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "clean:release": "rimraf coverage dist tmp",
    "prebuild": "npm run lint",
    "build": "npm run clean && tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean:release && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "author": "Jakub Synowiec <jsynowiec@users.noreply.github.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2"
  },
  "volta": {
    "node": "20.10.0"
  }
}
