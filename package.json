{
    "name": "node-clean-architecture-typescript-boilerplate",
    "version": "0.0.0",
    "description": "A Node.js webserver template implementing Clean Architecture concepts using Typescript",
    "type": "module",
    "engines": {
        "node": ">= 20.9 < 23"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.4",
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.17.0",
        "@types/body-parser": "^1.19.5",
        "@types/express": "^4.17.21",
        "@types/jest": "~29.5.14",
        "@types/node": "~22.10.2",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "~8.19.0",
        "@typescript-eslint/parser": "~8.19.0",
        "eslint": "~9.17.0",
        "eslint-config-prettier": "~9.1.0",
        "eslint-import-resolver-typescript": "^3.7.0",
        "eslint-plugin-boundaries": "^5.0.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "~28.10.0",
        "eslint-plugin-jest-extended": "^2.4.0",
        "globals": "^15.14.0",
        "jest": "~29.7.0",
        "jest-extended": "^4.0.2",
        "rimraf": "~6.0.1",
        "supertest": "^7.0.0",
        "ts-api-utils": "~1.0",
        "ts-jest": "~29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "~5.7.2"
    },
    "scripts": {
        "start": "node build/src/main.js",
        "clean": "rimraf coverage build tmp",
        "clean:release": "rimraf coverage dist tmp",
        "build": "npm run clean && tsc -p tsconfig.json",
        "build:watch": "tsc -w -p tsconfig.json",
        "build:release": "npm run clean:release && tsc -p tsconfig.release.json",
        "lint": "eslint **/*.ts --fix",
        "test": "jest",
        "test-coverage": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "author": "Maiquel Ludwig",
    "license": "Apache-2.0",
    "dependencies": {
        "body-parser": "^1.20.2",
        "express": "^4.18.2"
    },
    "volta": {
        "node": "20.10.0"
    }
}
